pipeline {
    agent any

    stages {
        stage('Checkout') {
            steps {
                // Clean the workspace before checkout
                cleanWs() // This will clean the workspace
                // Clone the repository from GitHub and specify the branch
                git branch: 'main', url: 'https://github.com/albertjulianto/SIT753HD.git'
            }
        }

        stage('Build') {
            steps {
                // Check if the Python script can run without syntax errors
                sh 'python3 SIT753HD.py'
            }
        }

        // Additional stages (Test, Code Quality, etc.) will follow here
    }

    post {
        always {
            archiveArtifacts artifacts: '*.py', allowEmptyArchive: true
        }
    }
}
